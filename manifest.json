{
  "manifest_version": 3,
  "name": "SarvaMitra",
  "version": "1.0",
  "description": "Text assistant with context menu integration",
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "permissions": [
    "sidePanel",
    "storage",
    "contextMenus",
    "activeTab",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["permission.html", "permission.js"],
      "matches": ["*://*/*"]
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "commands": {
    "toggle-mic": {
      "suggested_key": {
        "default": "Ctrl+Shift+1"
      },
      "description": "Toggle microphone recording",
      "global": true
    },
    "send-message": {
      "suggested_key": {
        "default": "Ctrl+Shift+2"
      },
      "description": "Send message",
      "global": true
    },
    "read-aloud": {
      "suggested_key": {
        "default": "Ctrl+Shift+3"
      },
      "description": "Read aloud current active content (chunk or selected text)",
      "global": true
    },
    "translate": {
      "suggested_key": {
        "default": "Ctrl+Shift+4"
      },
      "description": "Translate current active content",
      "global": true
    }
  },
  
  "icons": {
  "16": "icons/icon16.jpeg",
  "32": "icons/icon32.jpeg",
  "48": "icons/icon48.jpeg",
  "128": "icons/icon128.jpeg"
  }
}
