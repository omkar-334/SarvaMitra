{
  "manifest_version": 3,
  "name": "Sarvam",
  "version": "1.0",
  "description": "Text assistant with context menu integration",
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "permissions": [
    "sidePanel",
    "storage",
    "contextMenus",
    "activeTab",
    "tabs"
  ],
  
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["permission.html", "permission.js"],
      "matches": ["*://*/*"]
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
  "16": "icons/icon16.jpeg",
  "32": "icons/icon32.jpeg",
  "48": "icons/icon48.jpeg",
  "128": "icons/icon128.jpeg"
  }
}
